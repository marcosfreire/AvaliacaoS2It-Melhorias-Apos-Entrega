@model Desafio.s2.App.Service.ViewModels.JogoViewModel
<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CategoriaId" class="control-label"></label>
    <select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(ViewBag.Categorias,"Id","Nome"))"></select>
    <span asp-validation-for="CategoriaId" class="text-danger"></span>
</div>
<div class="form-group">
    <input id="ThumbnailCapaJogo" asp-for="ThumbnailCapaJogo" type="file" class="form-control" accept="image/x-png,image/jpeg" />
</div>